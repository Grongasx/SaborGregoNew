@using SaborGregoNew
@namespace SaborGregoNew.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sabor Grego</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
<style>
        :root {
            --primary-orange: #ff6b35;
            --primary-gold: #f7931e;
            --accent-green: #4caf50;
            --dark-bg: #1a1a1a;
            --card-bg: #2d2d2d;
            --text-light: #f5f5f5;
            --text-muted: #b0b0b0;
        }
        
        body {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d1810 100%);
            color: var(--text-light) !important;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
            color: var(--text-light) !important;
        }
        .text-muted {
            color: var(--text-muted) !important; 
        }

        .table {
            --bs-table-color: var(--text-light);
            --bs-table-bg: transparent;
            --bs-table-border-color: rgba(255, 107, 53, 0.2);
            --bs-table-hover-color: var(--text-light);
            --bs-table-hover-bg: rgba(255, 255, 255, 0.1);
            color: var(--text-light) !important;
        }
        
        .table thead th {
            color: var(--text-light);
            border-bottom: 2px solid var(--primary-orange);
            background-color: var(--card-bg);
            width: auto;
        }

        /* Garante que as listras (striped) fiquem escuras */
        .table-striped > tbody > tr:nth-of-type(odd) > * {
            color: var(--text-light);
            box-shadow: inset 0 0 0 9999px rgba(255, 255, 255, 0.05);
        }

        /* Garante que o texto continue branco ao passar o mouse */
        .table-hover > tbody > tr:hover > * {
            color: var(--text-light) !important;
            background-color: rgba(255, 255, 255, 0.1) !important;
            box-shadow: inset 0 0 0 9999px rgba(255, 255, 255, 0.1);
        }

        /* --- CORREÇÃO DE INPUTS (TEXTO E FUNDO) --- */
        .form-control, .form-select {
            background-color: var(--card-bg) !important;
            border: 1px solid rgba(255, 107, 53, 0.3);
            color: var(--text-light) !important; /* Texto branco ao digitar */
        }

        .form-control:focus, .form-select:focus {
            background-color: #3d3d3d !important; /* Fundo um pouco mais claro no foco */
            border-color: var(--primary-orange);
            color: var(--text-light) !important;
            box-shadow: 0 0 0 0.25rem rgba(255, 107, 53, 0.25);
        }

        /* Cor do texto de placeholder (dica dentro do input) */
        ::placeholder {
            color: var(--text-muted) !important;
            opacity: 1;
        }
        
        /* Inputs desabilitados ou readonly */
        .form-control:disabled, .form-control[readonly] {
            background-color: #1f1f1f !important;
            opacity: 0.7;
        }

        /* --- OUTROS ELEMENTOS --- */
        .list-group-item {
            background-color: var(--card-bg);
            color: var(--text-light);
            border-color: rgba(255, 107, 53, 0.2);
        }

        .navbar {
            background: rgba(26, 26, 26, 0.95) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 107, 53, 0.2);
        }
        
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-orange), var(--primary-gold));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .nav-link { color: var(--text-muted) !important; transition: color 0.3s; }
        .nav-link:hover { color: var(--primary-orange) !important; }
        
        .card {
            background: var(--card-bg);
            border: 1px solid rgba(255, 107, 53, 0.2);
            color: var(--text-light);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-orange), var(--primary-gold));
            border: none;
            font-weight: 600;
            color: white !important;
        }
        
        .btn-success {
            background: var(--accent-green);
            border: none;
            font-weight: 600;
            color: white !important;
        }

        .btn-group{
            gap: .5rem;
        }

        /* --- WHATSAPP & BADGES --- */
        .cart-badge {
            position: absolute; top: -8px; right: -8px;
            background: var(--primary-orange); color: white;
            border-radius: 50%; width: 24px; height: 24px;
            display: flex; align-items: center; justify-content: center;
            font-size: 0.75rem; font-weight: bold;
        }
        .btn-whatsapp { position:fixed; right:75px; bottom:30px; transform: translate(-50%, -50%); background-color:rgb(37, 211, 102); width:60px; height:60px; text-align:center; line-height:58px; font-size:1.8em; color:#ffffff; font-weight:100; border-radius:50%; }
        .btn-whatsapp a { color:#fff; text-decoration:none; display:block; }
        .btn-whatsapp:before, .btn-whatsapp:after { content: ''; display:block; position: absolute; border-radius:50%; border:1px solid #25d366; left: -20px; right: -20px; bottom: -20px; top: -20px; animation: animate 1.5s linear infinite; opacity:0; backface-visibility:hidden; }
        .pulsaDelay:after { animation-delay: .5s; }
</style>


</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-fire"></i> Sabor Grego
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Produto/Cardapio">Cardápio</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                    <li>
                        <a class="nav-link" asp-page="/Usuario/Admin/Dashboard">Painel de Administrador</a>
                    </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item position-relative">
                        <a class="nav-link" asp-page="/Pedido/Carrinho/Carrinho">
                            <i class="bi bi-cart3"></i>
                            <span class="cart-badge" id="cartCount">0</span>
                        </a>
                    </li>
                    @if (User.Identity != null && User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="bi dropdown-item" href="/Usuario/Endereco/ListaEnderecos">Meus Endereços</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <form method="post" action="/Logout">
                                <button type="submit" class="nav-link btn btn-link border-0">Sair</button>
                            </form>
                        </li>
                    }
                    else 
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Usuario/Cadastro">Registrar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Usuario/Login">Entrar</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1">
        @RenderBody()
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <a href="https://youtu.be/DLzxrzFCyOs?si=HH9NtL_Sijfc69l1" target="_blank">
            <div class="btn-whatsapp pulsaDelay"><i class="fa fa-whatsapp"></i></div>
        </a>
    </main>

    <footer class="footer py-4 mt-5">
        
        <div class="container text-center">
            <p class="mb-0 text-white text-White">© 2025 - SaborGrego. Todos os direitos reservados.</p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Cart management
        function updateCartCount() {
            const cart = JSON.parse(localStorage.getItem('cart') || '[]');
            const count = cart.reduce((sum, item) => sum + item.quantity, 0);
            const badge = document.getElementById('cartCount');
            if (badge) {
                badge.textContent = count;
                badge.style.display = count > 0 ? 'flex' : 'none';
            }
        }
        
        // Update cart count on page load
        document.addEventListener('DOMContentLoaded', updateCartCount);

        // Initialize Bootstrap dropdowns
        document.addEventListener('DOMContentLoaded', function () {
            var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'))
            var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                return new bootstrap.Dropdown(dropdownToggleEl)
            })
        });
    </script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>