@page
@model SaborGregoNew.Pages.CardapioModel
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@{ 
    ViewData["Title"] = "Cardápio";
}

<style>
    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .titulo-arrojado {
    font-family: 'Oswald', sans-serif; /* Fonte forte e condensada */
    font-weight: 700; /* Peso Bold/Negrito */
    text-transform: uppercase; /* Em letras MAIÚSCULAS */
    font-size: 3.5rem; /* Ajuste para dar mais impacto (ou use o display-4 do Bootstrap) */
    letter-spacing: 2px; /* Aumenta um pouco o espaçamento para destacar */
    color: #333; /* Cor escura para ênfase */
    margin-bottom: 5px; /* Reduz o espaço entre o título e o subtítulo */
}

.subtitulo-limpo {
    font-family: 'Open Sans', sans-serif; /* Fonte limpa e legível */
    font-weight: 400; /* Peso Regular */
    font-size: 1.2rem;
    color: #666; /* Cor mais suave que o título */
}

.cardapio-header {
    /* Adicione aqui qualquer espaçamento geral, se necessário */
    margin-bottom: 40px;
}
</style>

<div class="text-center cardapio-header">
    <h1 class="display-4 titulo-arrojado">NOSSO CARDÁPIO</h1>
    <p class="subtitulo-limpo">Conheça as delícias que preparamos para você!</p>
</div>

<div class="row">
    @foreach (var produto in Model.Produtos)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@produto.Imagem" class="card-img-top" alt="@produto.Nome" asp-append-version="true">
                <div class="card-body d-flex flex-column"  style="color: #e9e9e98c">
                    <h5 class="card-title">@produto.Nome</h5>
                    <p class="card-text">@produto.Descricao</p>
                    <p class="card-text"><strong>Preço:</strong> @produto.Preco.ToString("C")</p>
                    <p class="card-text"><small class="text-muted">Categoria: @produto.Categoria</small></p>
                    <form method="post" asp-page-handler="AdicionarAoCarrinho" asp-route-produtoId="@produto.Id">
                        <button type="submit" class="btn btn-primary mt-auto">
                            <i class="bi bi-cart-plus"></i> Adicionar ao Carrinho
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
