@page
@model SaborGregoNew.Pages.CardapioModel
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@{ 
    ViewData["Title"] = "Cardápio";
}

<style>
    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Nosso Cardápio</h1>
    <p>Conheça as delícias que preparamos para você!</p>
</div>

<div class="row">
    @foreach (var produto in Model.Produtos)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@produto.Imagem" class="card-img-top" alt="@produto.Nome" asp-append-version="true">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@produto.Nome</h5>
                    <p class="card-text">@produto.Descricao</p>
                    <p class="card-text"><strong>Preço:</strong> @produto.Preco.ToString("C")</p>
                    <p class="card-text"><small class="text-muted">Categoria: @produto.Categoria</small></p>
                    <form method="post" asp-page-handler="AdicionarAoCarrinho" asp-route-produtoId="@produto.Id">
                        <button type="submit" class="btn btn-primary mt-auto">
                            <i class="bi bi-cart-plus"></i> Adicionar ao Carrinho
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
