@page
@model SaborGregoNew.Pages.Usuario.Cozinheiro.PedidosModel
@{
    ViewData["Title"] = "Pedidos para Preparo";
    Layout = "Layouts/_Layout";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Painel do Cozinheiro</h1>

    <div class="row">
        <div class="col-md-6">
            <h2 class="text-danger">Novos Pedidos (Solicitados)</h2>
            @if (Model.PedidosSolicitados.Any())
            {
                foreach (var pedido in Model.PedidosSolicitados)
                {
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Pedido #@pedido.Id</strong> - @pedido.DataPedido.ToString("g")
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Itens do Pedido</h5>
                            <ul class="list-group list-group-flush">
                                @foreach (var item in pedido.Itens)
                                {
                                    <li class="list-group-item">
                                        @item.Quantidade x @item.NomeProduto
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="card-footer text-right">
                            <button class="btn btn-primary">Iniciar Preparo</button>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Nenhum novo pedido no momento.</p>
            }
        </div>

        <div class="col-md-6">
            <h2 class="text-warning">Pedidos em Preparação</h2>
            @if (Model.PedidosEmPreparacao.Any())
            {
                foreach (var pedido in Model.PedidosEmPreparacao)
                {
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Pedido #@pedido.Id</strong> - @pedido.DataPedido.ToString("g")
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Itens do Pedido</h5>
                            <ul class="list-group list-group-flush">
                                @foreach (var item in pedido.Itens)
                                {
                                    <li class="list-group-item">
                                        @item.Quantidade x @item.NomeProduto
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="card-footer text-right">
                            <button class="btn btn-success">Finalizar Preparo</button>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Nenhum pedido em preparação.</p>
            }
        </div>
    </div>
</div>
