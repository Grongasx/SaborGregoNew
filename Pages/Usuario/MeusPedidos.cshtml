@page
@model SaborGregoNew.Pages.Usuario.MeusPedidosModel
@{
    ViewData["Title"] = "Meus Pedidos";
}

<div class="container py-5">
    <h2 class="mb-4">ðŸ“‹ Meus Pedidos</h2>

    @if (Model.pedidosPendentes.Any())
    {
        @foreach (var pedido in Model.pedidosPendentes)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Pedido **#@pedido.Id**</h5>
                    <span class="badge bg-secondary">@pedido.Status</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <p class="mb-1"><strong>Data:</strong> @pedido.DataPedido.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-4">
                            <p class="mb-1"><strong>Total:</strong> <span class="text-danger fw-bold">R$ @pedido.TotalPedido.ToString("N2")</span></p>
                        </div>
                        <div class="col-md-4 text-end">
                            <a asp-page="/Pedido/ConfirmacaoPedido" asp-route-id="@pedido.Id" class="btn btn-sm btn-outline-primary">Ver Detalhes</a>
                        </div>
                    </div>
                    
                    <hr class="my-2">
                    
                    <p class="text-muted small mb-0">
                        Itens: 
                        @string.Join(", ", pedido.Itens.Take(3).Select(i => $"{i.NomeProduto} (x{i.Quantidade})"))
                        @if (pedido.Itens.Count > 3)
                        {
                            <span>, e mais @(pedido.Itens.Count - 3) itens...</span>
                        }
                    </p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            VocÃª ainda nÃ£o realizou nenhum pedido.
        </div>
    }
</div>