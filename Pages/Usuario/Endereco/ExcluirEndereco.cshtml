@page "{id:int}"
@model SaborGregoNew.Pages.Usuario.ExcluirEnderecoModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{    ViewData["Title"] = "Excluir Endereço";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <p>Tem certeza que deseja excluir o endereço abaixo?</p>
            
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h5 class="card-title">@Model.Endereco.Apelido</h5>
                    <p class="card-text">
                        @Model.Endereco.Logradouro, @Model.Endereco.Numero<br />
                        @Model.Endereco.Bairro
                    </p>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Endereco.Id" />
                <button type="submit" class="btn btn-danger">Sim, Excluir</button>
                <a asp-page="ListaEnderecos" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
